<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE2.CourseWork"
        xmlns:Models="clr-namespace:SE2.CourseWork.Models;assembly=Models"
        x:Class="SE2.CourseWork.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="633.7" Width="1163.66">
    <Grid>
        <TabControl>
            <TabItem Header="Persons">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="PersonTable" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
                              RowBackground="LightGray" AlternatingRowBackground="White"  Cursor="Arrow"
                              CanUserDeleteRows="False" CanUserAddRows="False" Margin="0,0,0,50">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Прізвище" Binding="{Binding Path=LastName}" Width="*" />
                            <DataGridTextColumn Header="Ім'я" Binding="{Binding Path=FirstName}" Width="*" />
                            <DataGridTextColumn Header="По батькові" Binding="{Binding Path=MiddleName}" Width="*" />
                            <DataGridTextColumn Header="Дата народження" Width="*" >
                                <DataGridTextColumn.Binding>
                                    <Binding Path="BirthdayDate">
                                        <Binding.ValidationRules>
                                            <local:DateValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Номер телефону" Binding="{Binding Path=PhoneNumber}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Read Persons from file" Margin="13,0,0,10" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150" Click="ReadPersons"/>
                </Grid>
            </TabItem>
            <TabItem Header="Students">
                <Grid x:Name="FindByAverageScore" Background="#FFE5E5E5" ToolTip="Введіть шукане значення тут">
                    <DataGrid x:Name="StudentTable" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
                              RowBackground="LightGray" AlternatingRowBackground="White"  Cursor="Arrow"
                              CanUserDeleteRows="False" CanUserAddRows="False" Margin="0,0,0,164">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Прізвище" Binding="{Binding Path=LastName}" Width="*" />
                            <DataGridTextColumn Header="Ім'я" Binding="{Binding Path=FirstName}" Width="*" />
                            <DataGridTextColumn Header="По батькові" Binding="{Binding Path=MiddleName}" Width="*" />
                            <DataGridTextColumn Header="Дата народження" Width="*" >
                                <DataGridTextColumn.Binding>
                                    <Binding Path="BirthdayDate">
                                        <Binding.ValidationRules>
                                            <local:DateValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Номер телефону" Binding="{Binding Path=PhoneNumber}" Width="*" />
                            <DataGridTextColumn Header="Курс" Binding="{Binding Path=Course}" IsReadOnly="True" Width="50" />
                            <DataGridTextColumn Header="Група" Binding="{Binding Path=GroupName}" Width="*" />
                            <DataGridTextColumn Header="Кафедра" Binding="{Binding Path=Speciality}" Width="150" />
                            <DataGridTextColumn Header="Середній бал" Binding="{Binding Path=AverageScore}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Read Students from file" Margin="10,0,0,124" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150" Click="ReadStudents"/>
                    <Label Content="Пошук студента за:" HorizontalAlignment="Left" Margin="10,0,0,93" VerticalAlignment="Bottom"/>
                    <RadioButton x:Name="FindByLastName" Content="Прізвищем" HorizontalAlignment="Left" Margin="10,0,0,73" VerticalAlignment="Bottom" IsChecked="True"/>
                    <RadioButton x:Name="FindByGroup" Content="Групою" HorizontalAlignment="Left" Margin="112,0,0,73" VerticalAlignment="Bottom"/>
                    <RadioButton x:Name="FindByAverageScore1" Content="Середнім балом" HorizontalAlignment="Left" Margin="194,0,0,73" VerticalAlignment="Bottom"/>
                    <TextBox x:Name="FindTextBox" HorizontalAlignment="Left" Height="23" Margin="10,0,0,45" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="293" ToolTip="Введіть шукане значення тут"/>
                    <Button x:Name="FindButton" Content="Знайти студента(ів)" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="293" Height="30" Click="FindButtonClick" />
                </Grid>
            </TabItem>
            <TabItem Header="Professors">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="ProfessorTable" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
                              RowBackground="LightGray" AlternatingRowBackground="White"  Cursor="Arrow"
                              CanUserDeleteRows="False" CanUserAddRows="False" Margin="0,0,0,50">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Прізвище" Binding="{Binding Path=LastName}" Width="*" />
                            <DataGridTextColumn Header="Ім'я" Binding="{Binding Path=FirstName}" Width="*" />
                            <DataGridTextColumn Header="По батькові" Binding="{Binding Path=MiddleName}" Width="*" />
                            <DataGridTextColumn Header="Дата народження" Width="*" >
                                <DataGridTextColumn.Binding>
                                    <Binding Path="BirthdayDate">
                                        <Binding.ValidationRules>
                                            <local:DateValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Номер телефону" Binding="{Binding Path=PhoneNumber}" Width="*" />
                            <DataGridTextColumn Header="Дисципліни, які викладає" Binding="{Binding Path=SubjectList}" IsReadOnly="True" Width="400" />
                            <DataGridTextColumn Header="Куратор групи" Binding="{Binding Path=GroupName}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Read Students from file" Margin="13,0,0,10" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150" Click="ReadProfessors"/>
                </Grid>
            </TabItem>
            <TabItem Header="Groups">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="GroupTable" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
                              RowBackground="LightGray" AlternatingRowBackground="White"  Cursor="Arrow"
                              CanUserDeleteRows="False" CanUserAddRows="False" Margin="0,0,0,50">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Група" Binding="{Binding Path=GroupName}" IsReadOnly="True" Width="*" />
                            <DataGridTextColumn Header="Спеціальність" Binding="{Binding Path=Speciality}" Width="*" />
                            <DataGridTextColumn Header="Кафедра" Binding="{Binding Path=SpecialityFullName}" Width="*" />
                            <DataGridTextColumn Header="Курс" Binding="{Binding Path=Course}" Width="*" />
                            <DataGridTextColumn Header="Номер групи" Binding="{Binding Path=Number}" Width="*" />
                            <DataGridTextColumn Header="Кількість студентів" Binding="{Binding Path=NumberOfStudents}" IsReadOnly="True" Width="*" />
                            <DataGridTextColumn Header="Куратор" Binding="{Binding Path=CuratorsName}" IsReadOnly="True" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Read Groups from file" Margin="13,0,0,10" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150" Click="ReadGroups"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
