<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE2.CourseWork"
        xmlns:Models="clr-namespace:SE2.CourseWork.Models;assembly=Models" x:Class="SE2.CourseWork.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Persons">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="PersonTable" Cursor="Arrow" CanUserDeleteRows="False" CanUserAddRows="False" Margin="0,0,0,50"/>
                    <Button Content="Read Persons from file" Margin="13,0,0,10" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Students">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Professors">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
